{
  "name": "@forms/runtime",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "size": "size-limit"
  },
  "dependencies": {
    "idb": "^8.0.0"
  },
  "peerDependencies": {
    "react": "^18 || ^19",
    "react-dom": "^18 || ^19"
  },
  "devDependencies": {
    "@forms/config": "workspace:*",
    "@size-limit/preset-small-lib": "^11.1.4",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "size-limit": "^11.1.4",
    "tsup": "^8.1.0",
    "typescript": "^5"
  },
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "30 KB"
    }
  ],
  "tsup": {
    "entry": ["src/index.ts"],
    "format": ["cjs", "esm"],
    "dts": true,
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "minify": true,
    "external": ["react", "react-dom"]
  }
}