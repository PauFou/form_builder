{
  "name": "forms-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Professional form platform - EU-hosted Typeform alternative",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "test": "turbo test",
    "test:ci": "turbo test -- --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:simple": "playwright test e2e/simple-form.spec.ts --reporter=html",
    "test:e2e:simple:run": "./scripts/test-simple-e2e.sh",
    "test:e2e:full": "playwright test e2e/full-workflow.spec.ts --reporter=html",
    "test:e2e:report": "playwright show-report",
    "test:e2e:local": "./scripts/run-e2e-tests.sh",
    "webhook:start": "node scripts/webhook-receiver.js",
    "test:a11y": "echo 'A11y tests not yet implemented - placeholder'",
    "test:contracts": "turbo test --filter=@forms/contracts",
    "test:perf": "turbo build --filter=@forms/runtime && node scripts/check-bundle-size.js",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "postinstall": "playwright install --with-deps chromium",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "ci": "pnpm lint && pnpm typecheck && pnpm test:ci && pnpm test:contracts"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx,json,md}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@playwright/test": "^1.40.0",
    "@swc/core": "^1.3.107",
    "@swc/jest": "^0.2.36",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.2.0",
    "axe-playwright": "^1.2.3",
    "body-parser": "^2.2.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.21.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "playwright": "^1.40.0",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.2",
    "turbo": "^2.0.14",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.5.0",
  "dependencies": {
    "axios": "^1.12.1"
  }
}
