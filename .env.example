# Environment
NODE_ENV=development

# Database
POSTGRES_URL=postgresql://forms:forms_local_dev@localhost:5432/forms
POSTGRES_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379

# ClickHouse
CLICKHOUSE_URL=http://analytics:analytics_local_dev@localhost:8123/analytics

# Storage (MinIO in dev, S3-compatible in prod)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=forms-uploads
S3_ACCESS_KEY_ID=minio_admin
S3_SECRET_ACCESS_KEY=minio_admin_password
S3_REGION=us-east-1

# Django
DJANGO_SECRET_KEY=django-insecure-dev-only-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# JWT
JWT_SECRET=jwt-secret-dev-only-change-this-in-production
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# HMAC for webhooks
HMAC_SECRET=hmac-secret-dev-only-change-this-in-production

# Email (MailHog in dev)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000/v1
NEXT_PUBLIC_RUNTIME_URL=http://localhost:3002

# Feature flags
FEATURE_PAYMENTS_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true