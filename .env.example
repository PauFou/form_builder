# Environment
NODE_ENV=development

# Database
POSTGRES_URL=postgresql://forms:forms_local_dev@localhost:5432/forms
POSTGRES_POOL_MAX=20

# Redis
REDIS_URL=redis://localhost:6379

# ClickHouse
CLICKHOUSE_URL=http://localhost:8123/forms_analytics

# Storage (Local storage for VPS deployment)
SECURE_STORAGE_ROOT=/var/www/forms/secure_storage
SITE_URL=https://forms.example.com

# Django
DJANGO_SECRET_KEY=django-insecure-dev-only-change-this-in-production
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# JWT
JWT_SECRET=jwt-secret-dev-only-change-this-in-production
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# HMAC for webhooks
HMAC_SECRET=hmac-secret-dev-only-change-this-in-production

# Email (MailHog in dev)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USE_TLS=False

# Frontend URLs
NEXT_PUBLIC_API_URL=http://localhost:8000/v1
NEXT_PUBLIC_RUNTIME_URL=http://localhost:3002
NEXT_PUBLIC_ANALYTICS_URL=http://localhost:8002

# Feature flags
FEATURE_PAYMENTS_ENABLED=false
FEATURE_ANALYTICS_ENABLED=true