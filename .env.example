# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://forms_user:forms_password@localhost:5432/forms_db

# Or use individual settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=forms_user
POSTGRES_PASSWORD=forms_password
POSTGRES_DB=forms_db

# Redis (for Celery and caching)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ClickHouse (for analytics)
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=forms_user
CLICKHOUSE_PASSWORD=forms_password
CLICKHOUSE_DB=forms_analytics

# Security
JWT_SECRET=your-jwt-secret-here
HMAC_SECRET=your-hmac-secret-here

# CORS (for frontend)
CORS_ALLOWED_ORIGINS=http://localhost:3300,http://localhost:3301,https://your-domain.com

# Email (for production)
EMAIL_HOST=smtp.your-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# S3 Storage (for file uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=eu-west-1
AWS_S3_CUSTOM_DOMAIN=your-bucket-name.s3.amazonaws.com

# Sentry (for error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
POSTHOG_API_KEY=your-posthog-key

# Feature Flags
ENABLE_PARTIAL_SUBMISSIONS=True
ENABLE_WEBHOOKS=True
ENABLE_INTEGRATIONS=True

# Stripe Payment Integration
STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Integrations API Keys
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
NOTION_API_KEY=secret_your-notion-integration-token
AIRTABLE_API_KEY=your-airtable-api-key