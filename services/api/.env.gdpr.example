# GDPR Configuration
# Copy to .env and configure for your environment

# Data Residency (EU regions only)
DEFAULT_DATA_REGION=eu-west-1
ALLOWED_REGIONS=eu-west-1,eu-central-1,eu-north-1

# S3 Configuration for EU
S3_BUCKET_EU=forms-data-eu-west-1
S3_REGION_EU=eu-west-1
S3_ENDPOINT_EU=https://s3.eu-west-1.amazonaws.com

# Database EU Configuration
DATABASE_URL_EU=postgresql://user:pass@eu-db.example.com:5432/forms
CLICKHOUSE_URL_EU=https://eu-clickhouse.example.com:8443

# PII Encryption
PII_ENCRYPTION_KEY=your-base64-encoded-fernet-key-here
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"

# Data Retention Defaults (days)
DEFAULT_RETENTION_SUBMISSIONS=365
DEFAULT_RETENTION_PARTIALS=30
DEFAULT_RETENTION_LOGS=90

# GDPR Email Templates
GDPR_FROM_EMAIL=privacy@yourcompany.eu
GDPR_REPLY_TO=dpo@yourcompany.eu

# DPA Configuration
DPA_COMPANY_NAME=Your Company Name
DPA_COMPANY_ADDRESS=Your EU Address
DPA_DPO_EMAIL=dpo@yourcompany.eu
DPA_DPO_PHONE=+33 1 23 45 67 89

# Export Storage
EXPORT_S3_BUCKET=forms-exports-eu
EXPORT_URL_EXPIRY=604800  # 7 days in seconds

# Compliance
GDPR_AUDIT_LOG_RETENTION=2555  # 7 years in days
GDPR_CONSENT_REQUIRED=true
GDPR_ANALYTICS_OPT_IN=true